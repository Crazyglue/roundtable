{
  "councilName": "System Design Council",
  "purpose": "Produce phased architecture and implementation decisions for system-level prompts.",
  "sessionPolicy": {
    "entryPhaseId": "high_level",
    "maxPhaseTransitions": 8,
    "phaseContextVerbosity": "standard"
  },
  "phases": [
    {
      "id": "high_level",
      "goal": "Define solution boundaries, options, and success metrics.",
      "promptGuidance": [
        "Prioritize architecture boundaries and key tradeoffs.",
        "Defer low-level details unless required for risk clarity."
      ],
      "deliverables": [
        {
          "id": "options_matrix",
          "description": "At least two viable architecture options with tradeoffs.",
          "required": true
        },
        {
          "id": "acceptance_criteria",
          "description": "Measurable success criteria for downstream implementation.",
          "required": true
        }
      ],
      "governance": {
        "requireSeconding": true,
        "majorityThreshold": 0.5,
        "abstainCountsAsNo": true
      },
      "stopConditions": {
        "maxRounds": 5,
        "endOnMajorityVote": true
      },
      "memoryPolicy": {
        "readMemberMemory": true,
        "writeMemberMemory": true,
        "writeCouncilMemory": true,
        "includePriorPhaseSummary": true
      },
      "evidenceRequirements": {
        "minCitations": 0,
        "requireExplicitAssumptions": true,
        "requireRiskRegister": true
      },
      "qualityGates": [
        "Includes explicit assumptions and top risks.",
        "Defines acceptance criteria for implementation."
      ],
      "fallback": {
        "resolution": "No majority high-level direction reached within configured rounds.",
        "action": "END_SESSION"
      },
      "transitions": [
        {
          "to": "implementation",
          "when": "MAJORITY_VOTE",
          "reason": "Proceed to concrete implementation design.",
          "priority": 0
        }
      ]
    },
    {
      "id": "implementation",
      "goal": "Convert approved direction into concrete implementation mechanics.",
      "promptGuidance": [
        "Specify APIs, data/state model, failure handling, and rollout sequencing.",
        "Turn risks into concrete mitigations and monitoring."
      ],
      "deliverables": [
        {
          "id": "implementation_plan",
          "description": "Concrete technical plan with explicit defaults.",
          "required": true
        },
        {
          "id": "rollout_plan",
          "description": "Phased delivery plan with testable checkpoints.",
          "required": true
        }
      ],
      "governance": {
        "requireSeconding": true,
        "majorityThreshold": 0.5,
        "abstainCountsAsNo": true
      },
      "stopConditions": {
        "maxRounds": 5,
        "endOnMajorityVote": true
      },
      "memoryPolicy": {
        "readMemberMemory": true,
        "writeMemberMemory": true,
        "writeCouncilMemory": true,
        "includePriorPhaseSummary": true
      },
      "evidenceRequirements": {
        "minCitations": 0,
        "requireExplicitAssumptions": true,
        "requireRiskRegister": true
      },
      "qualityGates": [
        "Defines operational failure modes and mitigations.",
        "Includes rollout checkpoints and acceptance tests."
      ],
      "fallback": {
        "resolution": "No majority implementation plan reached within configured rounds.",
        "action": "END_SESSION"
      },
      "transitions": []
    }
  ],
  "output": {
    "type": "documentation"
  },
  "documentationReview": {
    "maxRevisionRounds": 2
  },
  "members": [
    {
      "id": "cust_outcomes",
      "name": "Customer Outcomes Member",
      "role": "Customer Advocate",
      "systemPrompt": "You optimize for customer impact, clarity, and value delivery while remaining pragmatic. In early phases drive acceptance criteria; in later phases require concrete API and UX behavior.",
      "traits": ["customer-first", "clarity", "risk-aware"],
      "focusWeights": {
        "customer_outcome": 0.5,
        "delivery_speed": 0.2,
        "maintainability": 0.2,
        "cost": 0.1
      },
      "model": {
        "provider": "openai-codex",
        "baseUrl": "https://chatgpt.com/backend-api",
        "model": "gpt-5.1-codex-mini",
        "auth": {
          "method": "credential-ref",
          "credentialId": "openai-codex"
        },
        "temperature": 0.2,
        "maxTokens": 1200
      }
    },
    {
      "id": "scalability",
      "name": "Scalability Member",
      "role": "Platform Architect",
      "systemPrompt": "You focus on long-term scalability, resilience, and operability under growth. In implementation phases force concrete scheduling, coordination, and failure-mode mechanics.",
      "traits": ["systems-thinking", "performance", "operations"],
      "focusWeights": {
        "scalability": 0.45,
        "resilience": 0.35,
        "customer_outcome": 0.1,
        "cost": 0.1
      },
      "model": {
        "provider": "openai-compatible",
        "baseUrl": "https://gateway.example.com/openai/v1",
        "model": "gpt-4.1-mini",
        "auth": {
          "method": "credential-ref",
          "credentialId": "openai-codex"
        },
        "temperature": 0.2,
        "maxTokens": 1200
      }
    },
    {
      "id": "delivery_realist",
      "name": "Delivery Realist",
      "role": "Execution Strategist",
      "systemPrompt": "You optimize for implementation feasibility, staged rollout, and measurable risk reduction. Push concrete technology choices, operational controls, and testable rollout checkpoints.",
      "traits": ["pragmatic", "execution-focused", "tradeoff-driven"],
      "focusWeights": {
        "feasibility": 0.35,
        "risk_reduction": 0.25,
        "delivery_speed": 0.2,
        "scalability": 0.2
      },
      "model": {
        "provider": "anthropic",
        "baseUrl": "https://gateway.example.com/anthropic",
        "model": "claude-3-7-sonnet-latest",
        "auth": {
          "method": "credential-ref",
          "credentialId": "openai-codex"
        },
        "temperature": 0.2,
        "maxTokens": 1200
      }
    }
  ],
  "turnOrder": ["cust_outcomes", "scalability", "delivery_realist"],
  "storage": {
    "rootDir": "./.council",
    "memoryDir": "./.council/memory"
  },
  "execution": {
    "requireHumanApproval": true,
    "defaultExecutorProfile": "single-executor-agent"
  }
}
