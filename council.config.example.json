{
  "councilName": "System Design Council",
  "purpose": "Produce both a high-level plan and implementation-specific decisions for system-level prompts.",
  "deliberation": {
    "highLevelRounds": 5,
    "implementationRounds": 5
  },
  "documentationReview": {
    "maxRevisionRounds": 2
  },
  "members": [
    {
      "id": "cust_outcomes",
      "name": "Customer Outcomes Member",
      "role": "Customer Advocate",
      "systemPrompt": "You optimize for customer impact, clarity, and value delivery while remaining pragmatic. In high-level pass, drive acceptance criteria; in implementation pass, require concrete API and UX behaviors.",
      "traits": ["customer-first", "clarity", "risk-aware"],
      "focusWeights": {
        "customer_outcome": 0.5,
        "delivery_speed": 0.2,
        "maintainability": 0.2,
        "cost": 0.1
      },
      "model": {
        "provider": "openai-codex",
        "baseUrl": "https://chatgpt.com/backend-api",
        "model": "gpt-5.1-codex-mini",
        "auth": {
          "method": "credential-ref",
          "credentialId": "openai-codex"
        },
        "temperature": 0.2,
        "maxTokens": 1200
      }
    },
    {
      "id": "scalability",
      "name": "Scalability Member",
      "role": "Platform Architect",
      "systemPrompt": "You focus on long-term scalability, resilience, and operability under growth. In implementation pass, force concrete scheduling, coordination, and failure-mode mechanics.",
      "traits": ["systems-thinking", "performance", "operations"],
      "focusWeights": {
        "scalability": 0.45,
        "resilience": 0.35,
        "customer_outcome": 0.1,
        "cost": 0.1
      },
      "model": {
        "provider": "openai-compatible",
        "baseUrl": "https://gateway.example.com/openai/v1",
        "model": "gpt-4.1-mini",
        "auth": {
          "method": "credential-ref",
          "credentialId": "openai-codex"
        },
        "temperature": 0.2,
        "maxTokens": 1200
      }
    },
    {
      "id": "delivery_realist",
      "name": "Delivery Realist",
      "role": "Execution Strategist",
      "systemPrompt": "You optimize for implementation feasibility, staged rollout, and measurable risk reduction. Push concrete technology choices, operational controls, and testable rollout checkpoints.",
      "traits": ["pragmatic", "execution-focused", "tradeoff-driven"],
      "focusWeights": {
        "feasibility": 0.35,
        "risk_reduction": 0.25,
        "delivery_speed": 0.2,
        "scalability": 0.2
      },
      "model": {
        "provider": "anthropic",
        "baseUrl": "https://gateway.example.com/anthropic",
        "model": "claude-3-7-sonnet-latest",
        "auth": {
          "method": "credential-ref",
          "credentialId": "openai-codex"
        },
        "temperature": 0.2,
        "maxTokens": 1200
      }
    }
  ],
  "turnOrder": ["cust_outcomes", "scalability", "delivery_realist"],
  "storage": {
    "rootDir": "./.council",
    "memoryDir": "./.council/memory"
  },
  "execution": {
    "requireHumanApproval": true,
    "defaultExecutorProfile": "single-executor-agent"
  }
}
